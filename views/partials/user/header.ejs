  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #111 30%, #222 70%);
      color: white;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* Header */
    header {
      padding: 20px 0;
      background: #000;
    }

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 28px;
      color: gold;
      font-weight: bold;
      text-decoration: none;
    }

    .nav-links a {
      margin-left: 15px;
      text-decoration: none;
      color: white;
      font-size: 16px;
    }

    /* Custom Dropdown */
    .custom-dropdown {
      position: relative;
      display: inline-block;
    }

    .custom-dropdown .dropdown-content {
      display: none;
      position: absolute;
      background-color: #c4a277;
      min-width: 160px;
      box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
      z-index: 100;
      right: 0;
      margin-top: 5px;
    }

    .custom-dropdown .dropdown-content a {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }

    .custom-dropdown .dropdown-content a:hover {
      background-color: #897979;
    }

    .custom-dropdown:hover .dropdown-content,
    .custom-dropdown:focus-within .dropdown-content {
      display: block;
    }

    /* Hero Section */
    .hero {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 60px 0;
    }

    .hero-content {
      max-width: 500px;
    }

    .hero-content h1 {
      font-size: 48px;
      margin-bottom: 20px;
      color: gold;
    }

    .hero-content p {
      color: #bbb;
      margin-bottom: 30px;
    }

    .button {
      background-color: gold;
      color: black;
      padding: 12px 24px;
      text-decoration: none;
      font-weight: bold;
      border-radius: 4px;
    }

    .hero-image img {
      width: 350px;
      height: auto;
      border-radius: 10px;
    }

    /* Bestsellers */
    .bestsellers h2 {
      font-size: 28px;
      color: gold;
      text-align: center;
      margin-bottom: 20px;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      margin-top: 40px;
    }

    .product {
      background: #333;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
    }

    .product img {
      width: 100%;
      height: auto;
      margin-bottom: 15px;
      border-radius: 5px;
    }

    .orders-per-page {
      margin-bottom: 20px;
    }

    .orders-per-page label {
      margin-right: 10px;
    }

    .pagination {
      margin-top: 20px;
      text-align: center;
    }

    .pagination a,
    .pagination span {
      margin: 0 5px;
      padding: 5px 10px;
      text-decoration: none;
      color: #007bff;
    }

    .pagination a:hover {
      background-color: #f0f0f0;
    }

    .pagination span {
      color: #6c757d;
    }

    .product h3 {
      font-size: 16px;
      margin-bottom: 5px;
      color: gold;
    }

    /* Footer */
    footer {
      background: #000;
      color: white;
      padding: 60px 0;
      text-align: center;
    }

    .footer-content {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
    }

    .footer-section h3 {
      margin-bottom: 15px;
      color: gold;
    }

    .header {
      position: relative;
      z-index: 500;
    }

    .header-icons {
      display: flex;
      gap: 1.5rem;
      margin-left: 2rem;
    }

    .icon-link {
      position: relative;
      color: var(--text-primary);
      transition: all 0.3s ease;
    }

    .icon-link:hover {
      color: var(--accent-gold);
      transform: translateY(-2px);
    }

    .counter {
      position: absolute;
      top: -8px;
      right: -12px;
      background: var(--accent-gold);
      color: var(--dark-bg);
      width: 20px;
      height: 20px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      font-weight: bold;
    }

    /* Adjust existing nav-links spacing */
    .nav-links {
      display: flex;
      align-items: center;
      gap: 2rem;
    }

    .sidebar {
      background-color: #000000;
      min-height: 100vh;
      padding: 20px 0;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      z-index: 100;
      width: 16.67%;
      /* Matches col-lg-2 */
      overflow-y: auto;
      /* Enables scrolling if content overflows */
    }

    .sidebar h3 {
      color: #D4A017;
      font-size: 1.5rem;
      padding: 0 15px;
      margin-bottom: 20px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      text-decoration: none;
      color: #F5F5F5;
      font-weight: 500;
      transition: all 0.3s ease-in-out;
      border-radius: 8px;
    }

    .sidebar a i {
      margin-right: 10px;
      color: #F5F5F5;
      transition: color 0.3s ease-in-out;
    }

    .sidebar a:hover {
      background-color: #2A3233;
      transform: translateX(5px);
      /* Moves slightly right */
    }

    .sidebar a.active {
      background-color: #3080a7;
      /* Gold active background */
      color: #000000;
      /* Black text for contrast */
      font-weight: bold;
      border-left: 4px solid #F5F5F5;
      /* Highlight active tab */
    }

    .sidebar a,
    .sidebar i {
      transition: all 0.3s ease-in-out;
    }

    .footer-content {
      z-index: 1000;
    }

    .dropdown:hover .dropdown-menu {
      display: block;
    }

    .mobile-menu {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out;
    }

    .mobile-menu.open {
      max-height: 1000px;
    }
  </style>
