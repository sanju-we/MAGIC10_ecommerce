        <div class="container mx-auto px-4 py-6">
    <!-- Profile Container -->
    <div class="bg-gray-900 rounded-xl border border-gray-800 p-4 sm:p-6">
        <!-- Profile Header -->
        <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6 p-4 sm:p-6 bg-gray-800 rounded-lg border border-gray-700 mb-6">
            <img src="<%= userData.image %>" alt="Profile" class="w-20 h-20 sm:w-24 sm:h-24 rounded-full border-2 border-amber-500 object-cover">
            <div class="text-center sm:text-left">
                <h1 class="text-xl sm:text-2xl font-bold text-amber-500">
                    <%= userData.username %>
                </h1>
                <p class="text-gray-400 mt-1">Email: <%= userData.email %></p>
                <% if(userData.phone) { %>
                    <p class="text-gray-400">Phone: <%= userData.phone %></p>
                <% } %>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
            <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 text-center">
                <div class="text-2xl font-bold text-amber-500">
                    <i class="fas fa-box mr-2"></i><%= totalOrders %>
                </div>
                <p class="text-gray-400 mt-1">Total Orders</p>
            </div>
            <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 text-center">
                <div class="text-2xl font-bold text-amber-500">
                    <i class="fas fa-rupee-sign mr-2"></i>₹<%= totalSpends %>
                </div>
                <p class="text-gray-400 mt-1">Total Spending</p>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="mb-6">
            <h3 class="text-lg sm:text-xl font-bold text-amber-500 mb-3">Recent Orders</h3>
            <div class="space-y-3">
                <% recentOrders.forEach(order=> { %>
                    <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
                        <div class="flex flex-col sm:flex-row justify-between gap-3">
                            <div>
                                <h5 class="font-semibold">Order: <%= order.orderId %></h5>
                                <p class="text-gray-400 text-sm">Date: <%= new Date(order.createdOn).toLocaleDateString() %></p>
                            </div>
                            <div class="text-right">
                                <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold 
                                    <%= order.status.toLowerCase() === 'processing' ? 'bg-yellow-500' : 
                                       order.status.toLowerCase() === 'completed' ? 'bg-green-500' : 
                                       'bg-red-500' %>">
                                    <%= order.status %>
                                </span>
                                <h4 class="text-lg font-semibold mt-1">₹<%= order.finalAmount.toFixed(2) %></h4>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Primary Address -->
        <div>
            <h3 class="text-lg sm:text-xl font-bold text-amber-500 mb-3">Primary Address</h3>
            <div class="bg-gray-800 p-4 rounded-lg border border-gray-700">
                <% if (addressData && addressData.address && addressData.address.length > 0) { %>
                    <div class="space-y-2">
                        <h3 class="font-semibold"><%= addressData.address[0].fullName %></h3>
                        <p class="text-gray-400"><strong>Phone:</strong> <%= addressData.address[0].phone %></p>
                        <p class="text-gray-400"><strong>LandMark:</strong> <%= addressData.address[0].LandMark %></p>
                        <p class="text-gray-400"><strong>City:</strong> <%= addressData.address[0].city %>, <%= addressData.address[0].State %> - <%= addressData.address[0].PINcode %></p>
                        <p class="text-gray-400"><strong>Address Type:</strong> <%= addressData.address[0].addressType %></p>
                        <div class="flex flex-col xs:flex-row gap-2 mt-3">
                            <a href="/userProfile/editAddress/<%= addressData.address[0]._id %>" 
                               class="bg-red-450 hover:bg-amber-600 text-white font-medium py-2 px-4 rounded text-center transition">
                                Edit
                            </a>
                            <button onclick="deleteAddress('<%= addressData.address[0]._id %>')"
                               class="bg-red-450 hover:bg-red-600 text-white font-medium py-2 px-4 rounded text-center transition">
                                Delete
                            </button>
                        </div>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <p class="text-gray-400 mb-3">No primary address found.</p>
                        <a href="/userProfile/addAddress" 
                           class="inline-block bg-amber-500 hover:bg-amber-600 text-gray-900 font-medium py-2 px-4 rounded transition">
                            Add New Address
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
        <script>
            function deleteAddress(addressId) {
                Swal.fire({
                    title: "Delete Address?",
                    text: "Are you sure you want to remove this address?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#dc3545",
                    cancelButtonColor: "#6c757d",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/userProfile/deleteAddress/${addressId}`, {
                            method: "DELETE"
                        }).then(response => response.json())
                            .then(data => {
                                if (data.message === "Address deleted successfully") {
                                    Swal.fire("Deleted!", "Your address has been deleted.", "success")
                                        .then(() => location.reload());
                                } else {
                                    Swal.fire("Error!", "Failed to delete address.", "error");
                                }
                            }).catch(() => {
                                Swal.fire("Error!", "Server error occurred.", "error");
                            });
                    }
                });
            }
        </script>
