<%- include('../partials/user/header') %>

<style>
    :root {
        --dark-bg: #121212;
        --accent-gold: #c4a277;
        --secondary-bg: #1a1a1a;
        --text-primary: #e0e0e0;
        --text-secondary: #888;
        --border-light: rgba(196, 162, 119, 0.1);
        --hover-gold: #d4b487;
    }

    body {
        background-color: var(--dark-bg);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Header Styling */
    header {
        background: var(--secondary-bg);
        border-bottom: 1px solid var(--border-light);
        padding: 1rem 2rem;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--accent-gold);
        text-decoration: none;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .nav-links a {
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--accent-gold);
    }

    .header-icons {
        display: flex;
        gap: 1rem;
    }

    .header-icons .icon-link {
        color: var(--text-primary);
        font-size: 1.2rem;
        transition: color 0.3s ease;
    }

    .header-icons .icon-link:hover {
        color: var(--accent-gold);
    }

    .custom-dropdown {
        position: relative;
    }

    .sign-in-link {
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 500;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background: var(--secondary-bg);
        border: 1px solid var(--border-light);
        border-radius: 8px;
        top: 100%;
        right: 0;
        min-width: 150px;
        z-index: 1000;
    }

    .dropdown-content a {
        display: block;
        padding: 0.75rem 1rem;
        color: var(--text-primary);
        text-decoration: none;
        transition: background 0.3s ease;
    }

    .dropdown-content a:hover {
        background: rgba(196, 162, 119, 0.1);
        color: var(--accent-gold);
    }

    .custom-dropdown:hover .dropdown-content {
        display: block;
    }

    /* Sidebar Styling */
    .sidebar {
        height: 100vh;
        background: var(--secondary-bg);
        padding: 2rem 1.5rem;
        border-right: 1px solid var(--border-light);
        position: sticky;
        top: 0;
    }

    .sidebar h3 {
        margin-bottom: 2rem;
        font-size: 1.8rem;
        color: var(--accent-gold);
    }

    .sidebar a {
        color: var(--text-primary);
        text-decoration: none;
        padding: 1rem;
        margin: 0.5rem 0;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 1rem;
        font-weight: 500;
    }

    .sidebar a:hover,
    .sidebar .active {
        background: rgba(196, 162, 119, 0.1);
        color: var(--accent-gold);
        transform: translateX(5px);
    }

    .sidebar i {
        width: 25px;
        text-align: center;
        font-size: 1.2rem;
    }

    /* Main Content Styling */
    .profile-container {
        padding: 3rem;
        background: var(--secondary-bg);
        border-radius: 12px;
        border: 1px solid var(--border-light);
        margin: 2rem 0;
    }

    h1, h2, h3, h4, h5 {
        font-family: 'Bodoni Moda', serif;
        color: var(--accent-gold);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .profile-header img {
        border: 2px solid var(--accent-gold);
        padding: 2px;
    }

    .profile-header div h1 {
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
    }

    .profile-header div p {
        margin: 0;
        font-size: 1rem;
        color: var(--text-secondary);
    }

    /* Wallet Section */
    .wallet-section {
        margin-bottom: 3rem;
        padding: 1.5rem;
        background: var(--dark-bg);
        border-radius: 8px;
        border: 1px solid var(--border-light);
    }

    .wallet-section h2 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .wallet-section input {
        padding: 0.75rem;
        border-radius: 8px;
        border: 1px solid var(--border-light);
        background: var(--secondary-bg);
        color: var(--text-primary);
        font-size: 1rem;
        margin-right: 1rem;
        width: 200px;
    }

    .wallet-section input::placeholder {
        color: var(--text-secondary);
    }

    .wallet-section button {
        background: var(--accent-gold);
        color: var(--dark-bg);
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .wallet-section button:hover {
        background: var(--hover-gold);
        transform: translateY(-2px);
    }

    .referral-code {
        margin-top: 1rem;
        font-size: 1rem;
        color: var(--text-secondary);
    }

    .referral-code span {
        color: var(--accent-gold);
        font-weight: 600;
    }

    /* Stats Cards */
    .stats-card {
        background: var(--dark-bg);
        border: 1px solid var(--border-light);
        border-radius: 8px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .stats-card:hover {
        border-color: var(--accent-gold);
        transform: translateY(-5px);
    }

    .stats-card h5 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: var(--accent-gold);
    }

    .stats-card p {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Order Cards */
    .order-card {
        background: var(--dark-bg);
        border: 1px solid var(--border-light);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .order-card:hover {
        border-color: var(--accent-gold);
        transform: translateY(-3px);
    }

    .order-card .d-flex {
        gap: 1rem;
    }

    .order-status {
        background: rgba(196, 162, 119, 0.1);
        color: var(--accent-gold);
        padding: 0.25rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
    }

    /* Address Card */
    .address-card {
        padding: 1rem;
    }

    .address-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .address-card p {
        margin: 0.25rem 0;
        color: var(--text-secondary);
    }

    .address-actions {
        margin-top: 1rem;
        display: flex;
        gap: 1rem;
    }

    .btn-gold, .btn-danger {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-gold {
        background: var(--accent-gold);
        color: var(--dark-bg);
    }

    .btn-gold:hover {
        background: var(--hover-gold);
        transform: translateY(-2px);
    }

    .btn-danger {
        background: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background: #c82333;
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .sidebar {
            height: auto;
            position: relative;
            border-right: none;
            border-bottom: 1px solid var(--border-light);
        }

        .profile-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .wallet-section input {
            width: 100%;
            margin-bottom: 1rem;
        }

        .wallet-section button {
            width: 100%;
        }
    }
</style>

<body>
    <header>
        <nav>
            <a href="/" class="logo">MAGIC10</a>
            <div class="nav-links">
                <a href="/">HOME</a>
                <a href="/shop">SHOP</a>
                <a href="/about">ABOUT</a>
                <a href="/contact">CONTACT</a>

                <!-- Wishlist and Cart Buttons -->
                <div class="header-icons">
                    <a href="/wishlist" class="icon-link">
                        <i class="fas fa-heart"></i>
                    </a>
                    <a href="/cart" class="icon-link">
                        <i class="fas fa-shopping-bag"></i>
                    </a>
                </div>
                <div class="custom-dropdown">
                    <a href="#" class="sign-in-link">
                        <%= userData.username %>
                    </a>
                    <div class="dropdown-content">
                        <a href="/userProfile">Profile</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <h3 class="mb-4">MAGIC10</h3>
                <a href="#" class="active">
                    <i class="fas fa-user"></i>
                    Dashboard
                </a>
                <a href="/orderHistory">
                    <i class="fas fa-history"></i>
                    Order History
                </a>
                <a href="/userProfile/address/<%=userData._id%>">
                    <i class="fas fa-map-marker-alt"></i>
                    Address Book
                </a>
                <a href="/userProfile/edit/<%=userData._id%>">
                    <i class="fas fa-cog"></i>
                    Account Settings
                </a>
                <a href="/userProfile/wallet/<%=userData._id%>">
                    <i class='fas fa-wallet'></i>
                    Wallet
                </a>
                <a href="/logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="profile-container">
                    <!-- Profile Header -->
                    <div class="profile-header">
                        <div class="me-4">
                            <img src="<%= userData.image %>" class="rounded-circle" width="100" height="100" alt="Profile">
                        </div>
                        <div>
                            <h1 class="mb-1"><%= userData.username %></h1>
                            <p>Email: <%= userData.email %></p>
                            <p>Phone: <%= userData.phone %></p>
                        </div>
                    </div>

                    <!-- Stats Section -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="stats-card">
                                <h5><%= totalOrders %></h5>
                                <p class="mb-0">Total Orders</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="stats-card">
                                <h5>₹<%= totalSpends %></h5>
                                <p class="mb-0">Total Spending</p>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Orders -->
                    <div class="mt-5">
                        <h3 class="mb-4">Recent Orders</h3>
                        <% recentOrders.forEach(order => { %>
                            <div class="order-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">Order: <%= order.orderId %></h5>
                                        <p class="text-secondary mb-0">Date: <%= new Date(order.createdOn).toLocaleDateString() %></p>
                                    </div>
                                    <div class="text-end">
                                        <span class="order-status"><%= order.status %></span>
                                        <h4 class="mt-2">₹<%= order.finalAmount.toFixed(2) %></h4>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Primary Address -->
                    <div class="mt-5">
                        <h3 class="mb-4">Primary Address</h3>
                        <div class="order-card">
                            <% if (addressData && addressData.address && addressData.address.length > 0) { %>
                                <div class="address-card">
                                    <h3><%= addressData.address[0].fullName %></h3>
                                    <p><strong>Phone:</strong> <%= addressData.address[0].phone %></p>
                                    <p><strong>LandMark:</strong> <%= addressData.address[0].LandMark %></p>
                                    <p><strong>City:</strong> <%= addressData.address[0].city %>, <%= addressData.address[0].State %> - <%= addressData.address[0].PINcode %></p>
                                    <p><strong>Address Type:</strong> <%= addressData.address[0].addressType %></p>
                                    <div class="address-actions">
                                        <a href="/userProfile/editAddress/<%= addressData.address[0]._id %>" class="btn-gold">Edit</a>
                                        <button class="btn-danger" onclick="deleteAddress('<%= addressData.address[0]._id %>')">Delete</button>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="address-card text-center">
                                    <p class="text-secondary">No primary address found.</p>
                                    <a href="/userProfile/addAddress" class="btn-gold">Add New Address</a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        function deleteAddress(addressId) {
            Swal.fire({
                title: "Delete Address?",
                text: "Are you sure you want to remove this address?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#dc3545",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/userProfile/deleteAddress/${addressId}`, {
                        method: "DELETE"
                    }).then(response => response.json())
                        .then(data => {
                            if (data.message === "Address deleted successfully") {
                                Swal.fire("Deleted!", "Your address has been deleted.", "success")
                                    .then(() => location.reload());
                            } else {
                                Swal.fire("Error!", "Failed to delete address.", "error");
                            }
                        }).catch(() => {
                            Swal.fire("Error!", "Server error occurred.", "error");
                        });
                }
            });
        }
    </script>
</body>
<%- include('../partials/user/footer') %>
