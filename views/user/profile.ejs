<%- include('../partials/user/header') %>

    <style>
        :root {
            --dark-bg: #121212;
            --accent-gold: #c4a277;
            --secondary-bg: #1a1a1a;
            --text-primary: #e0e0e0;
            --text-secondary: #888;
            --border-light: rgba(196, 162, 119, 0.1);
            --hover-gold: #d4b487;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-primary);
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
        }

        main {
            margin-left: 18%;
            /* Adjust according to your sidebar width */
            padding: 20px;
            color: #F5F5F5;
            /* Light text for better contrast */
            min-height: 100vh;
        }

        /* Header Styling */
        header {
            background: var(--secondary-bg);
            border-bottom: 1px solid var(--border-light);
            padding: 1rem 2rem;
            background-color: #000;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent-gold);
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .nav-links a {
            color: var(--text-primary);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: var(--accent-gold);
        }

        .header-icons {
            display: flex;
            gap: 1rem;
        }

        .header-icons .icon-link {
            color: var(--text-primary);
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

        .header-icons .icon-link:hover {
            color: var(--accent-gold);
        }

        .custom-dropdown {
            position: relative;
        }

        .sign-in-link {
            color: var(--text-primary);
            text-decoration: none;
            font-weight: 500;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background: var(--secondary-bg);
            border: 1px solid var(--border-light);
            border-radius: 8px;
            top: 100%;
            right: 0;
            min-width: 150px;
            z-index: 1000;
        }

        .dropdown-content a {
            display: block;
            padding: 0.75rem 1rem;
            color: var(--text-primary);
            text-decoration: none;
            transition: background 0.3s ease;
        }

        .dropdown-content a:hover {
            background: rgba(196, 162, 119, 0.1);
            color: var(--accent-gold);
        }

        .custom-dropdown:hover .dropdown-content {
            display: block;
        }

        /* Main Content Styling */
        .profile-container {
            padding: 3rem;
            background: var(--secondary-bg);
            border-radius: 12px;
            border: 1px solid var(--border-light);
            margin: 2rem 0;
        }

        h1,
        h2,
        h3,
        h4,
        h5 {
            font-family: 'Bodoni Moda', serif;
            color: var(--accent-gold);
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 2rem;
            padding: 2rem;
            background: var(--dark-bg);
            border-radius: 12px;
            border: 1px solid var(--border-light);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }


        .profile-header img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 3px solid var(--accent-gold);
            object-fit: cover;
        }

        .profile-header div h1 {
            font-size: 2.4rem;
            color: var(--accent-gold);
        }

        .profile-header div p {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        /* Wallet Section */
        .wallet-section {
            margin-bottom: 3rem;
            padding: 1.5rem;
            background: var(--dark-bg);
            border-radius: 8px;
            border: 1px solid var(--border-light);
        }

        .wallet-section h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .wallet-section input {
            padding: 0.75rem;
            border-radius: 8px;
            border: 1px solid var(--border-light);
            background: var(--secondary-bg);
            color: var(--text-primary);
            font-size: 1rem;
            margin-right: 1rem;
            width: 200px;
        }

        .wallet-section input::placeholder {
            color: var(--text-secondary);
        }

        .wallet-section button {
            background: var(--accent-gold);
            color: var(--dark-bg);
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .wallet-section button:hover {
            background: var(--hover-gold);
            transform: translateY(-2px);
        }

        .referral-code {
            margin-top: 1rem;
            font-size: 1rem;
            color: var(--text-secondary);
        }

        .referral-code span {
            color: var(--accent-gold);
            font-weight: 600;
        }

        /* Stats Cards */
        .stats-card {
            background: var(--secondary-bg);
            border: 1px solid var(--border-light);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .stats-card:hover {
            transform: translateY(-3px);
            border-color: var(--accent-gold);
        }

        .stats-card h5 {
            font-size: 2.2rem;
            color: var(--accent-gold);
        }

        .stats-card p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* Order Cards */
        .order-card {
            background: var(--secondary-bg);
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid var(--border-light);
        }

        .order-card:hover {
            transform: translateY(-3px);
            border-color: var(--accent-gold);
        }

        .order-card .d-flex {
            gap: 1rem;
        }


        .order-status {
            font-size: 0.9rem;
            font-weight: 600;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            display: inline-block;
        }

        .order-status.processing {
            background: #f4b400;
            color: #fff;
        }

        .order-status.completed {
            background: #34a853;
            color: #fff;
        }

        .order-status.canceled {
            background: #ea4335;
            color: #fff;
        }

        /* Address Card */
        .address-card {
            background: var(--secondary-bg);
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--border-light);
        }

        .address-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .address-card p {
            margin: 0.25rem 0;
            color: var(--text-secondary);
        }

        .address-actions {
            margin-top: 1rem;
            display: flex;
            gap: 1rem;
        }

        .btn-gold,
        .btn-danger {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-gold {
            background: var(--accent-gold);
            color: var(--dark-bg);
        }

        .btn-gold:hover {
            background: var(--hover-gold);
            transform: translateY(-2px);
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                height: auto;
                position: relative;
                border-right: none;
                border-bottom: 1px solid var(--border-light);
            }

            .profile-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .wallet-section input {
                width: 100%;
                margin-bottom: 1rem;
            }

            .wallet-section button {
                width: 100%;
            }
        }

        .dashboard-card {
            background-color: #1A1A1A;
            /* Dark Gray for contrast */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
            text-align: center;
            font-size: 1.2rem;
            color: #D4A017;
        }

        .order-history {
            background-color: #121212;
            padding: 15px;
            border-radius: 8px;
        }

        .order-history p,
        .dashboard-card p {
            color: #F5F5F5;
        }

        .dashboard-summary {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }
    </style>

