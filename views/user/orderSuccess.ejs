<%- include('../partials/user/header') %>

<style>
    .success-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--dark-bg);
        padding: 2rem;
    }

    .success-box {
        background: var(--secondary-bg);
        border: 1px solid rgba(196, 162, 119, 0.3);
        padding: 3rem;
        border-radius: 16px;
        text-align: center;
        max-width: 800px;
        width: 100%;
        color: var(--text-primary);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
    }

    .success-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(196, 162, 119, 0.1);
        border: 2px solid var(--accent-gold);
        animation: checkmark 1s ease;
    }

    .success-icon svg {
        width: 40px;
        height: 40px;
        color: var(--accent-gold);
    }

    .success-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--accent-gold);
        margin-bottom: 1rem;
        letter-spacing: 0.5px;
    }

    .success-text {
        font-size: 1.1rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
    }

    .order-card {
        background: var(--dark-bg);
        border-radius: 12px;
        padding: 2rem;
        margin: 1.5rem 0;
        border: 1px solid rgba(196, 162, 119, 0.1);
    }

    .order-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        text-align: left;
    }

    .order-detail {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .detail-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .detail-value {
        color: var(--text-primary);
        font-weight: 500;
    }

    .highlight {
        color: var(--accent-gold);
        font-weight: 600;
    }

    .shop-btn {
        background: var(--accent-gold);
        color: var(--dark-bg);
        padding: 1rem 2.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        margin-top: 2rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
    }

    .shop-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(196, 162, 119, 0.3);
    }

    @keyframes checkmark {
        0% {
            transform: scale(0);
            opacity: 0;
        }
        80% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }

    @media (max-width: 768px) {
        .success-box {
            padding: 2rem;
        }
        
        .order-grid {
            grid-template-columns: 1fr;
        }
        
        .success-title {
            font-size: 2rem;
        }
    }
</style>
